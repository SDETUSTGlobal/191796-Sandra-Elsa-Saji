from selenium import webdriver  
import time  
from selenium.webdriver.common.keys import Keys  
print("test case started")  
driver = webdriver.Chrome("C:\Software\SeleniumTest\Browsers\chromedriver.exe")  
driver.maximize_window()    
driver.get("https://www.ajio.com/")
time.sleep(2)
driver.find_element_by_name("searchVal").send_keys("Top")
driver.find_element_by_xpath("/html/body/div[1]/div/div/div[1]/div/header/div[3]/div[2]/form/div/button").click()
time.sleep(2)
driver.get("https://www.ajio.com/kazo-embellished-slim-fit-top/p/463300636_pink")
driver.find_element_by_xpath("/html/body/div[1]/div/div/div[2]/div/div/div[2]/div/div[3]/div/div[6]/div[3]").click()
driver.find_element_by_xpath("/html/body/div[1]/div/div/div[2]/div/div/div[2]/div/div[3]/div/div[9]/div[1]/div[1]/div/span[1]").click()
time.sleep(2)
driver.find_element_by_xpath("/html/body/div[1]/div/div/div[2]/div/div/div[2]/div/div[3]/div/div[9]/div[1]/div[1]/a").click()
time.sleep(2)
driver.close()
print("sample test case successfully completed")